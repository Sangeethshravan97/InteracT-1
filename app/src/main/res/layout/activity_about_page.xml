<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/side_nav_bar"
    android:layout_height="match_parent"
    tools:context="com.example.rams.interact.about_page">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:textAlignment="center"
        android:textColor="#fff"
        android:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABOUT THE APP "
        android:textStyle="bold"
        android:textSize="40sp"
        />



        <android.support.v7.widget.CardView
            android:id="@+id/description"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_below="@id/title"
            android:layout_margin="10dp"
            android:background="@drawable/side_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="250dp">

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <TextView
                     android:id="@+id/about"
                     android:textColor="#000"
                     android:textAlignment="center"
                     android:textSize="17dp"
                     android:textStyle="bold"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="DESCRIPTION"
                     />

                 <TextView
                     android:id="@+id/text1a"
                     android:textColor="#000"
                     android:textAlignment="center"
                     android:textSize="17dp"
                     android:textStyle="bold"
                     android:layout_below="@id/about"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="This App is dedicated to our Department of Information Technology.For Queries and Feedback,Mail your thoughts to ramakrishnarmuthaiah@gmail.com" />

             </RelativeLayout>
        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:id="@+id/description2"
            android:layout_below="@id/description"
            android:layout_margin="10dp"
            android:background="@drawable/side_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title2"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TEAM"
                    />


                <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_below="@id/title2"
                    android:id="@+id/person1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/loga"
                    android:layout_margin="6dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_marginLeft="6dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000"
                    android:id="@+id/text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_toEndOf="@+id/loga"
                    android:text="Syed Shahinsha I" />


                    <TextView
                        android:id="@+id/text8A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/text8"
                        android:layout_below="@+id/text8"
                        android:text="DESIGNER"
                        android:textAlignment="viewStart"
                        android:textColor="#000" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_margin="10dp"
                    android:id="@+id/person2"
                    android:layout_below="@id/person1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="6dp"
                        android:id="@+id/dhar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        />

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:textAlignment="viewStart"
                        android:textColor="#000"
                        android:id="@+id/text8a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:layout_toEndOf="@+id/dhar"
                        android:text="Rama Krishnar M" />


                    <TextView
                        android:id="@+id/text8b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/text8a"
                        android:layout_below="@+id/text8a"
                        android:text="DEVELOPER"
                        android:textAlignment="viewStart"
                        android:textColor="#000" />

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/person4"
                    android:layout_margin="10dp"
                    android:layout_below="@id/person3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="6dp"
                        android:id="@+id/sundu"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        />

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:textAlignment="viewStart"
                        android:textColor="#000"
                        android:id="@+id/text8c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:layout_toEndOf="@+id/sundu"
                        android:text="Sangeeth" />


                    <TextView
                        android:id="@+id/text8d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/text8c"
                        android:layout_below="@+id/text8c"
                        android:text="Android Designer and Developer"
                        android:textAlignment="viewStart"
                        android:textColor="#000" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_margin="10dp"
                    android:id="@+id/person3"
                    android:layout_below="@id/person2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="6dp"
                        android:id="@+id/dp7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        />

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:textAlignment="viewStart"
                        android:textColor="#000"
                        android:id="@+id/text81"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:layout_toEndOf="@+id/dp7"
                        android:text="Sairam H" />


                    <TextView
                        android:id="@+id/text8b1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/text81"
                        android:layout_below="@+id/text81"
                        android:text="DEVELOPER"
                        android:textAlignment="viewStart"
                        android:textColor="#000" />

                </RelativeLayout>



            </RelativeLayout>



        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:id="@+id/dep"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_below="@id/description2"
            android:layout_margin="10dp"
            android:background="@drawable/side_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/about3"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DEPENDENCIES  USED"
                    />
                <RelativeLayout
                    android:id="@+id/circle"
                    android:layout_marginTop="7dp"
                    android:layout_margin="7dp"
                    android:layout_below="@id/about3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:id="@+id/text1"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CIRCLE IMAGE VIEW"
                        />
                    <TextView
                        android:textColor="#000"
                        android:id="@+id/text12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text1"
                        android:text="Gives a circular Image View for Android"
                        />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/card"
                    android:layout_marginTop="7dp"
                    android:layout_margin="7dp"
                    android:layout_below="@id/circle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:id="@+id/text11"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CARD VIEW"
                        />
                    <TextView
                        android:textColor="#000"
                        android:id="@+id/text123"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text11"
                        android:text="Gives a card shape layout"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/recycle"
                    android:layout_marginTop="7dp"
                    android:layout_margin="7dp"
                    android:layout_below="@id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:id="@+id/text111"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RECYCLER VIEW"
                        />
                    <TextView
                        android:textColor="#000"
                        android:id="@+id/text1234"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text111"
                        android:text="Refresh the items based on online services"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/firebase"
                    android:layout_marginTop="7dp"
                    android:layout_margin="7dp"
                    android:layout_below="@id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:id="@+id/text1111"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FIREBASE"
                        />
                    <TextView
                        android:textColor="#000"
                        android:id="@+id/text12345"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text1111"
                        android:text="Allows online database management"
                        />

                </RelativeLayout>




            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>



    </ScrollView>

</RelativeLayout>
