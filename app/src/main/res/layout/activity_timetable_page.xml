<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    tools:context="com.example.rams.interact.timetable_page">


    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/layout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/layout00"
            android:layout_margin="3dp"
            app:cardMaxElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIME TABLE"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="#1e90ef"
                />


        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#1e90ff"
        android:layout_margin="5dp"
        android:layout_below="@id/layout0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:id="@+id/layout1"

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <HorizontalScrollView
                android:layout_margin="10dp"
                android:id="@+id/scroll"
                android:fadeScrollbars="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_margin="4dp"
                        android:background="@drawable/side_nav_bar"
                        android:id="@+id/ita2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="it a II"
                        />

                    <Button
                        android:layout_margin="4dp"
                        android:background="@drawable/side_nav_bar"
                        android:id="@+id/ita3"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="it a III"
                        />

                    <Button
                        android:layout_margin="4dp"
                        android:background="@drawable/side_nav_bar"
                        android:id="@+id/ita4"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="it a IV"
                        />
                    <Button
                        android:layout_margin="4dp"
                        android:background="@drawable/side_nav_bar"
                        android:id="@+id/itb2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="it b II"
                        />

                    <Button
                        android:layout_margin="4dp"
                        android:background="@drawable/side_nav_bar"
                        android:id="@+id/itb3"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="it b III"
                        />

                    <Button
                        android:layout_margin="4dp"
                        android:background="@drawable/side_nav_bar"
                        android:id="@+id/itb4"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="it b IV"
                        />


                </LinearLayout>

            </HorizontalScrollView>


            <com.github.chrisbanes.photoview.PhotoView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="3dp"
                android:id="@+id/image1"
                android:layout_below="@id/scroll"
                />




            <TextView
                android:id="@+id/tt"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_below="@id/image1"
                android:text="timetable"
                android:textColor="#fff"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
